<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="700.0" minWidth="1024.0" stylesheets="@../css/custom.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stories.wizardstep1.WizardStep1Controller">
   <top>
       <VBox id="wizardTopPane" alignment="CENTER" prefWidth="800.0">
           <children>
               <Label fx:id="wizardTitleLabel" text="WIZARD">
                <VBox.margin>
                      <Insets bottom="20.0" top="20.0" />
                </VBox.margin>
               </Label>
               <ImageView fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@../images/wizard-step1.png" />
                   </image>
               </ImageView>
               <HBox maxWidth="800.0" spacing="110">
                   <Label fx:id="step1TitleLabel" text="WELCOME!">
                  <HBox.margin>
                     <Insets left="16.0" />
                  </HBox.margin></Label>
                   <Label fx:id="step2TitleLabel" text="KF2 SERVER">
                  <HBox.margin>
                     <Insets left="1.0" />
                  </HBox.margin></Label>
                   <Label fx:id="step3TitleLabel" text="PROFILE">
                  <HBox.margin>
                     <Insets left="7.0" />
                  </HBox.margin></Label>
                   <Label fx:id="step4TitleLabel" text="MAPS">
                  <HBox.margin>
                     <Insets left="32.0" />
                  </HBox.margin></Label>
                   <Label fx:id="step5TitleLabel" text="READY!">
                  <HBox.margin>
                     <Insets left="33.0" />
                  </HBox.margin></Label>
               </HBox>
           </children>
       </VBox>
   </top>
    <center>
        <VBox id="wizardCenterGridPane" alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="step1Description" text="Welcome to Simple Killing Floor 2 Server Launcher!. We are going to setup a basic KF2's server. Let's go ..." wrapText="true" />
                <ImageView fx:id="kf2screen" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/kf2logo.png" />
                    </image>
                    <VBox.margin>
                        <Insets top="20" />
                    </VBox.margin>
                </ImageView>
            </children>
        </VBox>
    </center>
   <bottom>
       <HBox id="wizardBottomPane" alignment="CENTER_RIGHT" spacing="40">
           <Button fx:id="nextStep" minWidth="80.0" mnemonicParsing="false" onAction="#nextStepOnAction" text="Next step">
                <HBox.margin>
                    <Insets bottom="20" right="30" />
                </HBox.margin>
           </Button>
       </HBox>
   </bottom>
   <right>
      <Pane id="wizardRightPane" minWidth="10.0" prefWidth="10.0" BorderPane.alignment="CENTER" />
   </right>
   <left>
      <Pane id="wizardLeftPane" minWidth="10.0" prefHeight="10.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
