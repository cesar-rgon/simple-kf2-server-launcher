<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="700.0" minWidth="1024.0" style="-fx-background-color: #414141;" stylesheets="@../css/custom.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <top>
       <VBox id="wizardTopPane" alignment="CENTER" prefWidth="800.0">
           <children>
               <HBox alignment="CENTER" spacing="20">
                   <children>
                       <ImageView fx:id="kf2logo" fitHeight="94.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                               <Image url="@../images/kf2logo.png" />
                           </image>
                       </ImageView>
                       <Label fx:id="wizardTitleLabel" text="WIZARD" />
                   </children>
                   <VBox.margin>
                       <Insets top="10.0" />
                   </VBox.margin>
               </HBox>
               <ImageView fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@../images/wizard-step4.png" />
                   </image>
               </ImageView>
               <HBox maxWidth="800.0" spacing="110">
                   <Label fx:id="step1TitleLabel" text="WELCOME!">
                       <HBox.margin>
                           <Insets left="16.0" />
                       </HBox.margin></Label>
                   <Label fx:id="step2TitleLabel" text="PROFILE">
                       <HBox.margin>
                           <Insets left="11.0" />
                       </HBox.margin></Label>
                   <Label fx:id="step3TitleLabel" text="KF2 SERVER">
                       <HBox.margin>
                           <Insets left="7.0" />
                       </HBox.margin></Label>
                   <Label fx:id="step4TitleLabel" text="MAPS">
                       <HBox.margin>
                           <Insets left="22.0" />
                       </HBox.margin></Label>
                   <Label fx:id="step5TitleLabel" text="SUMMARY">
                       <HBox.margin>
                           <Insets left="22.0" />
                       </HBox.margin></Label>
               </HBox>
           </children>
       </VBox>
   </top>
    <center>
        <GridPane id="wizardCenterGridPane" fx:id="content" alignment="CENTER" BorderPane.alignment="CENTER" />
    </center>
   <bottom>
       <HBox id="wizardBottomPane" alignment="CENTER_RIGHT" spacing="40">
           <Button fx:id="previousStep" minWidth="80.0" mnemonicParsing="false" text="Previous step">
               <HBox.margin>
                   <Insets bottom="20" />
               </HBox.margin>
           </Button>
           <Button fx:id="nextStep" minWidth="80.0" mnemonicParsing="false" text="Next step">
                <HBox.margin>
                    <Insets bottom="20" right="30" />
                </HBox.margin>
           </Button>
           <BorderPane.margin>
               <Insets top="20" />
           </BorderPane.margin>
       </HBox>
   </bottom>
   <right>
      <Pane id="wizardRightPane" minWidth="10.0" prefWidth="10.0" BorderPane.alignment="CENTER" />
   </right>
   <left>
      <Pane id="wizardLeftPane" minWidth="10.0" prefHeight="10.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
