<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<fx:root id="centerPane" fx:id="mapsEditionGridPane" prefHeight="745.0" prefWidth="1210.0" stylesheets="@../css/custom.css" type="javafx.scene.layout.GridPane" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stories.mapsedition.MapsEditionController">
   <children>
      <ImageView fx:id="profileImg" fitHeight="30.0" fitWidth="110.0" pickOnBounds="true" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
         <image>
            <Image url="@../images/label.png" />
         </image>
      </ImageView>
      <Label fx:id="profileLabel" text="PROFILE" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
         <GridPane.margin>
            <Insets right="10.0" />
         </GridPane.margin>
      </Label>
      <ComboBox fx:id="profileSelect" cache="true" onAction="#profileOnAction" prefWidth="350.0" GridPane.columnIndex="2">
         <GridPane.margin>
            <Insets />
         </GridPane.margin></ComboBox>

      <TabPane fx:id="mapsModsTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" GridPane.columnSpan="5" GridPane.rowIndex="1">
        <tabs>
          <Tab id="titleConfigLabel" fx:id="customMapsModsTab" text="Custom Maps and Mods">
               <content>
                  <ScrollPane fx:id="customMapsScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" vbarPolicy="ALWAYS">
                     <content>
                        <FlowPane fx:id="customMapsFlowPane" alignment="TOP_CENTER" columnHalignment="CENTER" hgap="50.0" style="-fx-background-color: black;;" vgap="50.0">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </FlowPane>
                     </content>
                  </ScrollPane>
               </content>
            </Tab>
          <Tab id="titleConfigLabel" fx:id="officialMapsTab" text="Official Maps">
               <content>
                  <ScrollPane fx:id="officialMapsScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" vbarPolicy="ALWAYS">
                     <content>
                        <FlowPane fx:id="officialMapsFlowPane" hgap="50.0" style="-fx-background-color: black;" vgap="50.0">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </FlowPane>
                     </content>
                  </ScrollPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
      <Slider fx:id="mapsSlider" blockIncrement="1.0" majorTickUnit="1.0" max="10.0" maxWidth="280.0" min="2.0" minorTickCount="0" onMouseClicked="#mapsSliderOnMouseClicked" orientation="VERTICAL" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="5.0" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.hgrow="NEVER" GridPane.valignment="CENTER">
         <GridPane.margin>
            <Insets bottom="-40.0" top="10.0" />
         </GridPane.margin>
         <padding>
            <Insets left="250.0" />
         </padding></Slider>
      <Label fx:id="sliderLabel" text="Columns" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
         <GridPane.margin>
            <Insets right="40.0" top="118.0" />
         </GridPane.margin>
      </Label>
      <TextField fx:id="searchMaps" maxWidth="250.0" onKeyReleased="#searchMapsKeyReleased" GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
         <GridPane.margin>
            <Insets right="40.0" top="120.0" />
         </GridPane.margin></TextField>
      <ImageView fx:id="searchImg" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
         <image>
            <Image url="@../images/find.png" />
         </image>
         <GridPane.margin>
            <Insets right="40.0" top="122.0" />
         </GridPane.margin>
      </ImageView>
      <ImageView fx:id="actionImg" fitHeight="30.0" fitWidth="110.0" pickOnBounds="true" GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
         <image>
            <Image url="@../images/label.png" />
         </image>
         <GridPane.margin>
            <Insets right="48.0" />
         </GridPane.margin>
      </ImageView>
      <Label fx:id="actionsLabel" text="ACTIONS" GridPane.columnIndex="3" GridPane.halignment="RIGHT">
         <GridPane.margin>
            <Insets right="58.0" />
         </GridPane.margin>
      </Label>

      <MenuBar id="actionsMenuBar" fx:id="actionsMenuBar" maxWidth="40.0" BorderPane.alignment="CENTER" GridPane.columnIndex="3" GridPane.halignment="RIGHT">
      <menus>
         <Menu fx:id="actions" mnemonicParsing="false" text="V">
            <items>
               <MenuItem fx:id="addNewMaps" mnemonicParsing="false" onAction="#addNewMapsOnAction" text="Add new maps" />
               <MenuItem fx:id="searchInWorkShop" mnemonicParsing="false" onAction="#searchInWorkShopOnAction" text="Search in WorkShop" />
               <MenuItem fx:id="removeMaps" mnemonicParsing="false" onAction="#removeMapsOnAction" text="Remove maps" />
               <MenuItem fx:id="importMapsFromServer" mnemonicParsing="false" onAction="#importMapsFromServerOnAction" text="Import maps from KF2 server" />
               <Menu fx:id="orderMaps" mnemonicParsing="false" text="Order maps">
                  <items>
                     <MenuItem fx:id="orderMapsByName" mnemonicParsing="false" text="By name" onAction="#orderMapsByName" />
                     <MenuItem fx:id="orderMapsByDate" mnemonicParsing="false" text="By date" />
                  </items>
               </Menu>
            </items>
         </Menu>
      </menus>
      </MenuBar>
      <CheckBox fx:id="selectAllMaps" mnemonicParsing="false" onAction="#selectAllMapsOnAction" text="Select all" GridPane.columnIndex="3" GridPane.halignment="LEFT">
         <GridPane.margin>
            <Insets top="120.0" />
         </GridPane.margin></CheckBox>
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" maxWidth="10.0" minWidth="10.0" prefWidth="10.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="50.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="242.0" prefWidth="255.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="242.0" />
      <ColumnConstraints hgrow="ALWAYS" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="ALWAYS" maxWidth="10.0" minWidth="10.0" prefWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="80.0" prefHeight="80.0" vgrow="NEVER" />
      <RowConstraints minHeight="610.0" vgrow="ALWAYS" />
   </rowConstraints>
</fx:root>
