<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="kf2database">
        <description>Killing Floor 2 DataBase</description>
        <provider>com.objectdb.jpa.Provider</provider>

        <class>entities.Difficulty</class>
        <class>entities.GameType</class>
        <class>entities.Language</class>
        <class>entities.Length</class>
        <class>entities.MaxPlayers</class>
        <class>entities.AbstractMap</class>
        <class>entities.OfficialMap</class>
        <class>entities.CustomMapMod</class>
        <class>entities.Profile</class>
        <class>entities.ProfileMap</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="javax.persistence.jdbc.url" value="objectdb:kf2database.odb"/>
            <property name="javax.persistence.jdbc.user" value="admin"/>
            <property name="javax.persistence.jdbc.password" value="admin"/>
        </properties>
    </persistence-unit>
</persistence>